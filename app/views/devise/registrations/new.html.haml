%h1= t '.title'
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render 'devise/shared/error_messages', resource: resource
  .form-group.row
    = f.label :email, class: 'col-sm-2 col-form-label'
    .col-sm-8= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control'
  .form-group.row
    = f.label :name, class: 'col-sm-2 col-form-label'
    .col-sm-8= f.text_field :name, autocomplete: 'name', class: 'form-control'
  .form-group.row
    .col-sm-2
      = f.label :password, class: 'col-form-label'
      - if @minimum_password_length
        %small.form-text.text-muted#passwordHelp= t '.password_min_length', length: @minimum_password_length
    .col-sm-8= f.password_field :password, autocomplete: 'new-password', class: 'form-control', 'aria-describedby': 'passwordHelp'
  .form-group.row
    = f.label :password_confirmation, class: 'col-sm-2 col-form-label'
    .col-sm-8= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'
  .form-group.row
    .col-sm-8.offset-sm-2
      .form-check
        = f.check_box :terms_of_service, class: 'form-check-input'
        = f.label :terms_of_service, t('.terms_of_service_html', link_tag: link_to(t('.terms_of_service'), terms_path)), class: 'form-check-label'
  .form-group.row
    .col-sm-8= f.submit t('.sign_up'), class: 'btn btn-primary'
= render 'devise/shared/links'
