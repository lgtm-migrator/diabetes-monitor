%h2= t '.title'
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  = render 'devise/shared/error_messages', resource: resource
  = f.hidden_field :reset_password_token
  .form-group.row
    .col-sm-2
      = f.label t('.new_password'), class: 'col-form-label'
      - if @minimum_password_length
        %small.form-text.text-muted#passwordHelp= t '.password_min_length', length: @minimum_password_length
    .col-sm-8= f.password_field :password, autofocus: true, autocomplete: 'new-password', class: 'form-control', 'aria-describedby': 'passwordHelp'
  .form-group.row
    = f.label :password_confirmation, t('.confirm_password'), class: 'col-sm-2 col-form-label'
    .col-sm-8= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'
  .form-group.row
    = f.submit t('.change_password'), class: 'btn btn-primary'
= render 'devise/shared/links'
